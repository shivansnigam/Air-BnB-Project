<style>
    /* Main Filters Container */
    #filters {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        justify-content: center; /* Center the filters */
        margin-bottom: 2rem; /* Space below the filters */
    }

    .filter {
        text-align: center;
        margin: 1rem; /* Add uniform margin */
        opacity: 0.7;
        transition: opacity 0.3s; /* Smooth opacity transition */
        padding: 1rem; /* Add padding for better touch targets */
        border: 1px solid transparent; /* Default border for modern look */
        border-radius: 1rem; /* Rounded corners */
        background-color: #f8f9fa; /* Light background for visibility */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Subtle shadow for depth */
    }

    .filter:hover {
        opacity: 1;
        cursor: pointer;
        border: 1px solid #007bff; /* Highlight border on hover */
        background-color: #e2e6ea; /* Darken background on hover */
    }

    .filter div {
        font-size: 2rem; /* Increase icon size */
        color: #007bff; /* Icon color */
        transition: transform 0.3s; /* Smooth transition for scaling effect */
    }

    .filter:hover div {
        transform: scale(1.2); /* Scale icon on hover */
    }

    .filter p {
        font-size: 0.9rem; /* Adjust text size */
        margin-top: 0.5rem; /* Space between icon and text */
    }

    .tax-info {
        display: none;
    }

    .tax-switch {
        border: 1px solid black;
        border-radius: 1rem;
        height: 3.25rem;
        padding: 1rem;
        margin-left: 1rem; /* Adjust margin for better spacing */
        display: flex;
        align-items: center;
        background-color: #f8f9fa; /* Match switch background */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Subtle shadow for depth */
    }

    /* Card Layout */
    .listing-card {
         /* Smooth transition for card hover effect */
        margin: 0 5px;
        
    }

    .listing-card:hover {
        transform: scale(1.05); /* Slight zoom effect on hover */
    }

    /* Responsive Styles */
    .row {
        margin: 0; /* Remove margin from rows */
    }

    /* Adjust card size for different screen sizes */
    @media (max-width: 576px) {
        .listing-card {
            width: 90%; /* Full width on extra small screens */
            margin: 0 auto; /* Center the card */
        }
    }

    @media (min-width: 576px) and (max-width: 768px) {
        .listing-card {
            width: 80%; /* Slightly smaller on small screens */
            margin: 0 auto; /* Center the card */
        }
    }

    @media (min-width: 768px) and (max-width: 992px) {
        .listing-card {
            width: 45%; /* Two columns on medium screens */
        }
    }

    @media (min-width: 992px) {
        .listing-card {
            width: 30%; /* Three columns on large screens */
        }
    }

    @media (min-width: 1200px) {
        .listing-card {
            width: 22%; /* Four columns on extra large screens */
        }
    }

    @media (min-width: 1400px) {
        .listing-card {
            width: 100%; /* Five columns on extra extra large screens */
        }
    }
    
</style>

